<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport">
  <title>All Your Running Data</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <section class="welcome-section">
    <div class="image2">
      <img src="run3.jpg" alt="Welcome Image">
      <div class="title">RUNNING DATA</div><br>
      <a href="/">HOME</a>
    </div>
  </section>
  <hr>
  <strong>All Recorded Runs:</strong>
  <ul>
    <% data.forEach(run => { %>
      <li>
        <strong>Date:</strong> <%= run.date %><br>
        <strong>Name:</strong> <%= run.name %><br>
        <strong>Age:</strong> <%= run.age %><br>
        <strong>Distance:</strong> <%= run.distance %> miles<br>
        <strong>Time:</strong> <%= run.time %> minutes<br>
        <strong>Goal:</strong> <%= run.goal %><br>
      </li>
    <% }) %>
  </ul>
</body>
</html>
