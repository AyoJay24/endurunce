<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Leaderboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/logRun">Log Run</a>
      <a href="/leaderboard">Leaderboard</a>
    </nav>
  </header>

  <main>
    <section id="leaderboard">
      <h2>Leaderboard</h2>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Total Distance (miles)</th>
          </tr>
        </thead>
        <tbody>
          <% if (runners.length === 0) { %>
            <tr>
              <td colspan="2">No runners yet. Be the first to log a run!!!</td>
            </tr>
          <% } else { %>
            <% runners.forEach(function(runner) { %>
              <tr>
                <td><%= runner._id %></td>
                <td><%= runner.totalMiles.toFixed(2) %></td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </section>
  </main>
</body>
</html>
